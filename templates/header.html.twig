        <a href="{{ path('logout') }}">Disconnect</a>
        <a href="{{ path('profil', { id: user.id }) }}" class="in">My Profil</a>
        <a href="{{ path('panier_index', { id: user.id }) }}" class="in"
          >My Cart</a
        >
        {% endif %}
      </div>
      <nav class="main-menu mobile-menu">
        <ul>
          <li>
            <a class="active" href="./index.html">Home</a>
          </li>
          <li>
            <a href="./categories.html">Shop</a>
            <ul class="sub-menu">
              <li>
                <a href="product-page.html">Product Page</a>
              </li>
              <li>
                <a href="shopping-cart.html">Shopping Card</a>
              </li>
              <li>
                <a href="check-out.html">Check out</a>
              </li>
            </ul>
          </li>

          <li>
            <a href="{{ path('property.ShowAll') }}">
              All Products
            </a>
          </li>
          <li>
            <a href="{{ path('contact') }}">Contact</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
