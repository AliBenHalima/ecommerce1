      <div class="logo">
        <a href="./index.html"><img src="/img/logo.png" alt=""/></a>
      </div>

      <div class="user-access">
        {% if not app.user %}
        <a href="{{ path('app_register') }}">Register</a>
        <a href="{{ path('security_login') }}" class="in">Connect</a>

